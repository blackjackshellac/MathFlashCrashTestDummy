<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.oneguycoding.mathflashcrashtestdummy.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/text_message"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintBottom_toTopOf="@+id/guideline_h08"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_v20"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v90"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/number1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_v20"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v60"
            app:layout_constraintTop_toTopOf="@+id/guideline_h08"/>

        <EditText
            android:id="@+id/number2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_v20"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v60"
            app:layout_constraintTop_toBottomOf="@+id/number1"/>

        <ImageView
            android:id="@+id/imageOperation"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v20"
            app:layout_constraintTop_toTopOf="@+id/number2"
            app:srcCompat="@drawable/ic_action_plus"/>

        <EditText
            android:id="@+id/number3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_v20"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v60"
            app:layout_constraintTop_toBottomOf="@+id/number2"/>

        <Button
            android:id="@+id/sendAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:onClick="sendAnswer"
            android:text="@string/button_answer"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/number3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_v60"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v90"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline_h08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"
            />

        <ImageView
            android:id="@+id/image_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/descrip_smiling_star"
            app:layout_constraintBottom_toTopOf="@+id/sendAnswer"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_v60"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v90"
            app:srcCompat="@drawable/yoshi_star"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline_v20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08"
            />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_v60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.24"
            />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_v90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.43"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:progressTint="@android:color/holo_blue_bright"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_v60"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v90"
            app:layout_constraintTop_toBottomOf="@+id/sendAnswer"/>

        <TextView
            android:id="@+id/text_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_v20"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v90"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"/>

        <include
            layout="@layout/keyboard_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline_h08"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.546"
            app:layout_constraintStart_toEndOf="@+id/text_progress"
            tools:layout_editor_absoluteY="8dp"/>

        <!--
        <include
            android:id="@+id/main_stars"
            layout="@layout/grid_stars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="276dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintRight_toRightOf="parent"/>
            -->

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
